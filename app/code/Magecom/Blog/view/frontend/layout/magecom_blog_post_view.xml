        <block class="Magecom\Blog\Block\Post\View" name="magecom.post.view"
               template="Magecom_Blog::post_view.phtml" cacheable="false">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="post_view" xsi:type="array">
                            <item name="component" xsi:type="string">Magecom_Blog/js/view/post_view</item>
                            <item name="config" xsi:type="array">
                                <item name="template" xsi:type="string">Magecom_Blog/view/post_view</item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </block>
    </referenceContainer>
</page>